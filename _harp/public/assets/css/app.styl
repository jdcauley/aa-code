@import '../dependencies/normalize-css/normalize.css';


brand-primary = #d10077
light-gray = #ecf0f1
white = #fff

*
  -webkit-box-sizing border-box
  -moz-box-sizing border-box
  box-sizing border-box

/* ============================
   Grid
   ============================ */

.container
  display block
  height auto
  width 100%
  max-width 1000px
  margin-left auto
  margin-right auto

.col
  display inline-block
  height auto
  padding 10px
  float left

.half
  width 100%

.quarter
  width 100%

.three-quarters
  width 100%

.one-third
  width 100%

.two-thirds
  width 100%

.small
  &.half
    width 50%

  &.quarter
    width 25%

  &.three-quarters
    width 75%

  &.three-quarters
    width 75%

  &.one-third
    width 33%

  &.two-thirds
    width 66%

.img-fit
  width 100%
  max-width 100%

@media (min-width: 500px)
  .half
    width 50%

  .quarter
    width 25%

  .three-quarters
    width 75%

  .three-quarters
    width 75%

  .one-third
    width 33%

  .two-thirds
    width 66%

  .small
    width auto


/* ============================
   Globals
   ============================ */
body
  background light-gray
  font-family 'Arial' 'Helvetica' 'sans-serif'

/* ============================
   Slider
   ============================ */

.slider
  display block
  position relative
  width 100%
  overflow hidden

.slide
  position absolute
  display block
  height auto
  width 100%
  opacity 0
  transition all .5s ease
  &.prev
    right 0
  &.next
    left 0
  &.active
    position relative
    opacity 1
    img
      position relative
      display block
      height auto
      max-width 100%
      margin-left auto
      margin-right auto

.slide-control
  position absolute
  display block
  top 45%
  height 0
  width 0
  &.right
    right 30px
    border-top 25px solid transparent
    border-bottom 25px solid transparent
    border-left 25px solid brand-primary
  &.left
    left 30px
    border-top 25px solid transparent
    border-bottom 25px solid transparent
    border-right 25px solid brand-primary

.slide-prev
  position absolute
  display block
  right 100%

.slide-next
  position absolute
  display block
  left 100%

/* ============================
   Nav
   ============================ */

.main-header
  width 100%
  min-height 110px
  padding 10px 0
  background brand-primary

.branding
  display inline-block
  float left
  .logo
    img
      display inline-block
      width 100%
      max-width 100%

.main-nav
  ul
    display inline-block
    float right
    li
      display inline-block
      padding 15px 25px
      a
        color white
        font-size 18px
        vertical-align middle
        text-decoration none

/* ============================
   content
   ============================ */

.content
  background white

.post-box
  min-height 200px
  h1
    margin-top 0
    font-weight 500
