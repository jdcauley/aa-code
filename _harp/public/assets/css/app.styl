@import '../dependencies/normalize-css/normalize.css';


brand-primary = #d10077
light-gray = #ecf0f1
white = #fff


/* ============================
   Grid
   ============================ */

.container
  display block
  height auto
  width 100%
  max-width 1000px
  margin-left auto
  margin-right auto

.col
  display inline-block
  height auto
  float left

.half
  width 50%

.quarter
  width 25%

.three-quarters
  width 75%

.one-third
  width 33%

.two-thirds
  width 66%

/* ============================
   Globals
   ============================ */
body
  background light-gray

/* ============================
   Slider
   ============================ */

.slider
  position relative
  height auto
  width 100%
  overflow hidden

.slide
  position absolute
  display block
  width 100%
  opacity 0
  transition all .5s ease
  &.prev
    right 0
  &.next
    left 0
  &.active
    opacity 1
    img
      position relative
      display block
      height auto
      max-width 100%
      margin-left auto
      margin-right auto
      vertical-align middle

.slide-control
  position absolute
  display block
  top 45%
  height 0
  width 0
  &.right
    right 30px
    border-top 25px solid transparent
    border-bottom 25px solid transparent
    border-left 25px solid brand-primary
  &.left
    left 30px
    border-top 25px solid transparent
    border-bottom 25px solid transparent
    border-right 25px solid brand-primary

.slide-prev
  position absolute
  display block
  right 100%

.slide-next
  position absolute
  display block
  left 100%

/* ============================
   Nav
   ============================ */

.main-nav
  width 100%
  min-height 80px
  background brand-primary

/* ============================
   content
   ============================ */

.content
  background white
